<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/ibusiness</property>
    <property name="hibernate.connection.username">ibusiness</property>
    <property name="hibernate.connection.password">bcc</property>
    <mapping resource="bcc/ibusiness/entidades/Receita.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Cliente.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Venda.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Produto.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Categoria.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Item.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Fornecedor.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Despesa.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Funcionario.hbm.xml"/>
    <mapping resource="bcc/ibusiness/entidades/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
